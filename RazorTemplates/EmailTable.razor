@using Model.Mark;

@code {
    [Parameter] public string cssPath { get; set; }
    [Parameter] public IList<用户表> users { get; set; }
}

<link href="@cssPath" rel="stylesheet">

<div>
    <h3>你好，以下是最新用户表信息推送！</h3>
    <table class="hovertable">
        <thead>
            <tr>
                <th>ID</th>
                <th>姓名</th>
                <th>性别</th>
                <th>年龄</th>
                <th>地址</th>
                <th>电话</th>
            </tr>
        </thead>
        <tbody>
            @foreach (用户表 user in users)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.NAME</td>
                    <td>@user.SEX</td>
                    <td>@user.AGE</td>
                    <td>@user.ADDRESS</td>
                    <td>@user.PHONENUMBER</td>
                </tr>
            }
        </tbody>
    </table>
</div>
